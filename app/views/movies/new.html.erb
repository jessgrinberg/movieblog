<h1> Add a new Movie</h1>

<%= form_for @movie do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<div>
		<%= f.label :year %>
		<%= f.text_field :year %>
	</div>

	<div>
		<%= f.label :plot %>
		<%= f.text_field :plot %>
	</div>

	<%= f.submit "Add a new movie!" %>

<% end %>

<%= link_to "Back to the movie list", movies_path %>


