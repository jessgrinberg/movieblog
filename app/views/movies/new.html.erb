<%= render 'welcome/nav' %>

<div class ="container">

<h1> Add your Movie</h1>

<%= form_for @movie do |f| %>
	  <div class="form-group"> 
		<%= f.label :title %>
		<%= f.text_field :title, class:"form-control" %>
	</div>

	  <div class="form-group"> 
		<%= f.label :image %>
		<%= f.file_field :image, class:"form-control" %>
	</div>

	  <div class="form-group"> 
		<%= f.label :year %>
		<%= f.text_field :year, class:"form-control" %>
	</div>

	  <div class="form-group"> 
		<%= f.label :plot %>
		<%= f.text_field :plot, class:"form-control" %>
	</div>


	  <%=  f.submit 'Save', :class =>'btn btn-lg btn-block' %>

<% end %>

</div>



