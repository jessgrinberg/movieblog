<!DOCTYPE html>
<html>
<head>
  <title>Movieblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!--<script src="http://maps.googleapis.com/maps/api/js"> </script> -->
  <%#= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</head>
<body>


<%# flash.each do |name, msg| -%>
      <%#=content_tag :div, msg, class: name %>
    <%# end %>

     <div class="container-fluid">
    <%#= flash.inspect %>
    <% if flash[:alert] %>
      <% flash[:alert].each do |message| %>
        <div class="alert alert-danger alert-dismissible" role="alert"><%= message %> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
      <% end %>
    <% end %>
    <% if flash[:notice] %>
      <div class="alert alert-info alert-dismissible" role="alert"><%= flash[:notice] %> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    <% end %>
     <% if flash[:success] %>
      <div class="alert alert-success" role="alert"><%= flash[:success] %><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    <% end %>
     <% if flash[:warning]%>
      <div class="alert alert-warning" role="alert"><%= flash[:success] %><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
      <% end %>


  
  </div>

<%= yield %>

</div>

</body>
</html>
